{
    "name": "Site Lock",
    "version": "0.0.1",
    "description": "Lock your browser into one website",
    "permissions": ["storage", "tabs"],
    "page_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["checkSite.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2
}